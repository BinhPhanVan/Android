<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome my calculator"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="20dp"
        >
        <EditText
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:textAlignment="textEnd"
            ></EditText>
        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MC MR M- M+"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"

                android:text="7"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"
                android:text="8"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"
                android:text="9"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_plusremo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/dark"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#95989A"
                android:text="->"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"
                android:text="4"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"
                android:text="5"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#C2C4C5"
                android:text="6"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#95989A"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btn_devide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#95989A"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></Button>

        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="2"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#C2C4C5"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#C2C4C5"
                        android:text="2"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#C2C4C5"
                        android:text="3"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_move"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#95989A"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                </LinearLayout>
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:text="C"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#C2C4C5"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_dot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#C2C4C5"
                        android:text="."
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#95989A"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"></Button>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:background="@color/blue"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></Button>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decimal places - F(change)"
            android:textSize="18dp"></TextView>
        <TextView
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PC/Mobile"
            android:textSize="18dp"></TextView>

    </LinearLayout>


</LinearLayout>